{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": false,
		"typeRoots": ["node_modules/@types"],
		"noEmit": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": ["es2018", "esnext.asynciterable", "DOM"],
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.test.ts", "migrations/**/*.ts"],
	"exclude": ["node_modules", ".vscode"]
}
